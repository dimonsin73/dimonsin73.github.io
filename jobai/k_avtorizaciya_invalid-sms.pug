                            .registraciya__col
                                h3.registraciya__title.registraciya__title-blur Я хочу найти
                                .registraciya__radios.registraciya__radios-blur
                                    .radio
                                        input.radio__input#search-job(type="radio" name="registraciya" checked value='Работу' disabled)
                                        label.radio__label(for="search-job") 
                                            .radio__check

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title LogIn
        link(rel="stylesheet", href="css/fonts.css")
        link(rel="stylesheet", href="css/reset.css")
        link(rel="stylesheet", href="css/login.css")
    body    
        .container
            .login
                .logo 
                    p.logo__job JOB 
                    p.logo__job.logo__job-white AI 
                .role 
                    .radio
                        input#role-rabotodatel(type="radio", name="role" checked).radio__input
                        label(for='role-rabotodatel').radio__label Найти сотрудника
                    .radio
                        input#role-kandidat(type="radio", name="role").radio__input
                        label(for='role-kandidat').radio__label Найти работу
                form.form.form_active.neumorphic
                    h1.title Авторизоваться
                    input(type="text", placeholder="Логин", name='username').neumorphic.neumorphic-input
                    input(type="password", placeholder="Пароль", name='password').neumorphic.neumorphic-input
                    .form__footer.form__footer-center
                        button(type='submit').neumorphic.neumorphic-button Войти
            

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title SingIn
        link(rel="stylesheet", href="css/fonts.css")
        link(rel="stylesheet", href="css/reset.css")
        link(rel="stylesheet", href="css/login2.css")
        script(src="js/singin.js", defer)  
    body    
        .container
            .login#login
                .logo 
                    p.logo__job JOB 
                    p.logo__job.logo__job-white AI 
                .role 
                    .radio
                        input#role-rabotodatel(type="radio", name="role" checked).radio__input
                        label(for='role-rabotodatel').radio__label Найти сотрудника
                    .radio
                        input#role-kandidat(type="radio", name="role").radio__input
                        label(for='role-kandidat').radio__label Найти работу
                form.form.form_active.neumorphic(data-form='basic')
                    h1.title Зарегистрироваться
                    input(type="email", placeholder="Электронная почта", name='email').neumorphic.neumorphic-input#email
                    input(type="text", placeholder="Телефон", name='phone').neumorphic.neumorphic-input#phone
                    .form__footer 
                        button(type='submit').neumorphic.neumorphic-button.form__footer-btn Дальше
                        button(type="button").neumorphic.neumorphic-button.form__footer-btn Отмена
                form.form.neumorphic(data-form='email')
                    input(type="text", placeholder="Введите код", name='email-code').neumorphic.neumorphic-input#email-code
                    .form__block
                        p.form__text Код отправлен на 
                        p.form__text.form__text-center d.p.mezentsev@job-ai.ru
                        .form__timer
                            p.form__text Получить новый код через 
                            .timer 
                                .timer__minutes 01
                                .timer__separatop :
                                .timer__seconds 00
                    .form__footer 
                        button(type='submit').neumorphic.neumorphic-button.form__footer-btn Войти
                        button(type="button").neumorphic.neumorphic-button.form__footer-btn.form__cancel Отмена
                    .form__block
                        p.form__text У вас нет учётной записи?
                        a(href='').form__link Регистрация
                form.form.neumorphic(data-form='phone')
                    input(type="text", placeholder="Введите код", name='phone-code').neumorphic.neumorphic-input#phone-code
                    .form__block
                        p.form__text Код отправлен на 
                        p.form__text.form__text-center +7 (985) 220 89 91 
                        .form__timer
                            p.form__text Получить новый код через 
                            .timer 
                                .timer__minutes 01
                                .timer__separatop :
                                .timer__seconds 00
                    .form__footer 
                        button(type='submit').neumorphic.neumorphic-button.form__footer-btn Войти
                        button(type="button").neumorphic.neumorphic-button.form__footer-btn.form__cancel Отмена
                    .form__block
                        p.form__text У вас нет учётной записи?
                        a(href='').form__link Регистрация
